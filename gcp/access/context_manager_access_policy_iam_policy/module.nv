variables:
  name:
    type: string
    description: "Required property for ContextManagerAccessPolicyIamPolicy"
  policy_data:
    type: string
    description: "Required property for ContextManagerAccessPolicyIamPolicy"
  id:
    type: string
    description: "Optional property for ContextManagerAccessPolicyIamPolicy"
    default: null

resources:
  main:
    type: gcp:access:ContextManagerAccessPolicyIamPolicy
    properties:
      name: ${var.name}
      policy_data: ${var.policy_data}
      id: ${var.id}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
