variables:
  name:
    type: string
    description: "Required property for DirectoryServiceIamPolicy"
  policy_data:
    type: string
    description: "Required property for DirectoryServiceIamPolicy"
  id:
    type: string
    description: "Optional property for DirectoryServiceIamPolicy"
    default: null

resources:
  main:
    type: gcp:service:DirectoryServiceIamPolicy
    properties:
      name: ${var.name}
      policy_data: ${var.policy_data}
      id: ${var.id}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
