# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json?token=GHSAT0AAAAAADJBKTZJYHQDWBGJPIP6TMBS2KUJZ3A
#------------------------------------------------------------------------------

variables:
  members:
    type: list
    description: "Required property for TopicIamBinding"
  role:
    type: string
    description: "Required property for TopicIamBinding"
  topic:
    type: string
    description: "Required property for TopicIamBinding"
  id:
    type: string
    description: "Optional property for TopicIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for TopicIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:pubsub:TopicIamBinding
    properties:
      members: ${var.members}
      role: ${var.role}
      topic: ${var.topic}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
