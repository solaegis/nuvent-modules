variables:
  members:
    type: list
    description: "Required property for SubscriptionIamBinding"
  role:
    type: string
    description: "Required property for SubscriptionIamBinding"
  subscription:
    type: string
    description: "Required property for SubscriptionIamBinding"
  id:
    type: string
    description: "Optional property for SubscriptionIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for SubscriptionIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:pubsub:SubscriptionIamBinding
    properties:
      members: ${var.members}
      role: ${var.role}
      subscription: ${var.subscription}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
