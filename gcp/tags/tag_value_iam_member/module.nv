#------------------------------------------------------------------------------
# gcp/tags/tag_value_iam_member/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  member:
    type: string
    description: "Required property for TagValueIamMember"
  role:
    type: string
    description: "Required property for TagValueIamMember"
  tag_value:
    type: string
    description: "Required property for TagValueIamMember"
  id:
    type: string
    description: "Optional property for TagValueIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:tags:TagValueIamMember
    properties:
      member: ${var.member}
      role: ${var.role}
      tag_value: ${var.tag_value}
      id: ${var.id}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
