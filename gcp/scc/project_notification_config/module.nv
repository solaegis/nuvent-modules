#------------------------------------------------------------------------------
# gcp/scc/project_notification_config/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  config_id:
    type: string
    description: "This must be unique within the organization."
  pubsub_topic:
    type: string
    description: "The Pub/Sub topic to send notifications to. Its format is \"projects/[project_id]/topics/[topic]\"."
  description:
    type: string
    description: "The description of the notification config (max of 1024 characters)."
    default: null
  id:
    type: string
    description: "Optional property for ProjectNotificationConfig"
    default: null
  project:
    type: string
    description: "Optional property for ProjectNotificationConfig"
    default: null
  streaming_config:
    type: list
    description: "Nested block: streaming_config"
    default: []
  timeouts:
    type: list
    description: "Nested block: timeouts"
    default: []

resources:
  main:
    type: gcp:scc:ProjectNotificationConfig
    properties:
      config_id: ${var.config_id}
      pubsub_topic: ${var.pubsub_topic}
      description: ${var.description}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        streaming_config:
          for_each: ${var.streaming_config}
          content:
            filter: ${each.value.filter}
        timeouts:
          for_each: ${var.timeouts}
          content:
            create: ${each.value.create}
            delete: ${each.value.delete}
            update: ${each.value.update}

outputs:
  id:
    description: "Output: id"
    value: ${resources.main.id}
  name:
    description: "The resource name of this notification config, in the format 'projects/{{projectId}}/notificationConfigs/{{config_id}}'."
    value: ${resources.main.name}
  project:
    description: "Output: project"
    value: ${resources.main.project}
  service_account:
    description: "The service account that needs \"pubsub.topics.publish\" permission to publish to the Pub/Sub topic."
    value: ${resources.main.service_account}
