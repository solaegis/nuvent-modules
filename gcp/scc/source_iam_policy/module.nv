#------------------------------------------------------------------------------
# gcp/scc/source_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  organization:
    type: string
    description: "Required property for SourceIamPolicy"
  policy_data:
    type: string
    description: "Required property for SourceIamPolicy"
  source:
    type: string
    description: "Required property for SourceIamPolicy"
  id:
    type: string
    description: "Optional property for SourceIamPolicy"
    default: null

resources:
  main:
    type: gcp:scc:SourceIamPolicy
    properties:
      organization: ${var.organization}
      policy_data: ${var.policy_data}
      source: ${var.source}
      id: ${var.id}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
