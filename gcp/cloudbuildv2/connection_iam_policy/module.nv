variables:
  name:
    type: string
    description: "Required property for ConnectionIamPolicy"
  policy_data:
    type: string
    description: "Required property for ConnectionIamPolicy"
  id:
    type: string
    description: "Optional property for ConnectionIamPolicy"
    default: null
  location:
    type: string
    description: "Optional property for ConnectionIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for ConnectionIamPolicy"
    default: null

resources:
  main:
    type: gcp:cloudbuildv2:ConnectionIamPolicy
    properties:
      name: ${var.name}
      policy_data: ${var.policy_data}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}
