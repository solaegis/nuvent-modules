#------------------------------------------------------------------------------
# gcp/iap/app_engine_service_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  app_id:
    type: string
    description: "Required property for AppEngineServiceIamPolicy"
  policy_data:
    type: string
    description: "Required property for AppEngineServiceIamPolicy"
  service:
    type: string
    description: "Required property for AppEngineServiceIamPolicy"
  id:
    type: string
    description: "Optional property for AppEngineServiceIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for AppEngineServiceIamPolicy"
    default: null

resources:
  main:
    type: gcp:iap:AppEngineServiceIamPolicy
    properties:
      app_id: ${var.app_id}
      policy_data: ${var.policy_data}
      service: ${var.service}
      id: ${var.id}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
