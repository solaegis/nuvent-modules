variables:
  members:
    type: list
    description: "Required property for ManagerSecretIamBinding"
  role:
    type: string
    description: "Required property for ManagerSecretIamBinding"
  secret_id:
    type: string
    description: "Required property for ManagerSecretIamBinding"
  id:
    type: string
    description: "Optional property for ManagerSecretIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for ManagerSecretIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:secret:ManagerSecretIamBinding
    properties:
      members: ${var.members}
      role: ${var.role}
      secret_id: ${var.secret_id}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
