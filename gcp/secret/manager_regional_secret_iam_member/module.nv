variables:
  member:
    type: string
    description: "Required property for ManagerRegionalSecretIamMember"
  role:
    type: string
    description: "Required property for ManagerRegionalSecretIamMember"
  secret_id:
    type: string
    description: "Required property for ManagerRegionalSecretIamMember"
  id:
    type: string
    description: "Optional property for ManagerRegionalSecretIamMember"
    default: null
  location:
    type: string
    description: "Optional property for ManagerRegionalSecretIamMember"
    default: null
  project:
    type: string
    description: "Optional property for ManagerRegionalSecretIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:secret:ManagerRegionalSecretIamMember
    properties:
      member: ${var.member}
      role: ${var.role}
      secret_id: ${var.secret_id}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  location:
    description: "Output: location"
    value: ${resources.main.location}
  project:
    description: "Output: project"
    value: ${resources.main.project}
