#------------------------------------------------------------------------------
# gcp/database/migration_service_private_connection/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json?token=GHSAT0AAAAAADJBKTZJYHQDWBGJPIP6TMBS2KUJZ3A
#------------------------------------------------------------------------------

variables:
  location:
    type: string
    description: "The name of the location this private connection is located in."
  private_connection_id:
    type: string
    description: "The private connectivity identifier."
  create_without_validation:
    type: boolean
    description: "If set to true, will skip validations."
    default: null
  display_name:
    type: string
    description: "Display name."
    default: null
  id:
    type: string
    description: "Optional property for MigrationServicePrivateConnection"
    default: null
  labels:
    type: object
    description: "Labels.  **Note**: This field is non-authoritative, and will only manage the labels present in your configuration. Please refer to the field 'effective_labels' for all of the labels present on the resource."
    default: null
  project:
    type: string
    description: "Optional property for MigrationServicePrivateConnection"
    default: null
  timeouts:
    type: list
    description: "Nested block: timeouts"
    default: []
  vpc_peering_config:
    type: list
    description: "Nested block: vpc_peering_config"
    default: []

resources:
  main:
    type: gcp:database:MigrationServicePrivateConnection
    properties:
      location: ${var.location}
      private_connection_id: ${var.private_connection_id}
      create_without_validation: ${var.create_without_validation}
      display_name: ${var.display_name}
      id: ${var.id}
      labels: ${var.labels}
      project: ${var.project}
      dynamic:
        timeouts:
          for_each: ${var.timeouts}
          content:
            create: ${each.value.create}
            delete: ${each.value.delete}
            update: ${each.value.update}
        vpc_peering_config:
          for_each: ${var.vpc_peering_config}
          content:
            subnet: ${each.value.subnet}
            vpc_name: ${each.value.vpc_name}

outputs:
  display_name:
    description: "Display name."
    value: ${resources.main.display_name}
  effective_labels:
    description: "All of labels (key/value pairs) present on the resource in GCP, including the labels configured through Terraform, other clients and services."
    value: ${resources.main.effective_labels}
  error:
    description: "The PrivateConnection error in case of failure."
    value: ${resources.main.error}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  name:
    description: "The resource's name."
    value: ${resources.main.name}
  project:
    description: "Output: project"
    value: ${resources.main.project}
  state:
    description: "State of the PrivateConnection."
    value: ${resources.main.state}
  terraform_labels:
    description: "The combination of labels configured directly on the resource  and default labels configured on the provider."
    value: ${resources.main.terraform_labels}
