# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json?token=GHSAT0AAAAAADJBKTZJYHQDWBGJPIP6TMBS2KUJZ3A
#------------------------------------------------------------------------------

variables:
  folder:
    type: string
    description: "The numeric folder number for which to retrieve config."
  id:
    type: string
    description: "Optional property for FolderKajPolicyConfig"
    default: null
  default_key_access_justification_policy:
    type: list
    description: "Nested block: default_key_access_justification_policy"
    default: []
  timeouts:
    type: list
    description: "Nested block: timeouts"
    default: []

resources:
  main:
    type: gcp:kms:FolderKajPolicyConfig
    properties:
      folder: ${var.folder}
      id: ${var.id}
      dynamic:
        default_key_access_justification_policy:
          for_each: ${var.default_key_access_justification_policy}
          content:
            allowed_access_reasons: ${each.value.allowed_access_reasons}
        timeouts:
          for_each: ${var.timeouts}
          content:
            create: ${each.value.create}
            delete: ${each.value.delete}
            update: ${each.value.update}

outputs:
  id:
    description: "Output: id"
    value: ${resources.main.id}
