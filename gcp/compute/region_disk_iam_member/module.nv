variables:
  member:
    type: string
    description: "Required property for RegionDiskIamMember"
  name:
    type: string
    description: "Required property for RegionDiskIamMember"
  role:
    type: string
    description: "Required property for RegionDiskIamMember"
  id:
    type: string
    description: "Optional property for RegionDiskIamMember"
    default: null
  project:
    type: string
    description: "Optional property for RegionDiskIamMember"
    default: null
  region:
    type: string
    description: "Optional property for RegionDiskIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:compute:RegionDiskIamMember
    properties:
      member: ${var.member}
      name: ${var.name}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      region: ${var.region}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
