#------------------------------------------------------------------------------
# gcp/compute/machine_image_iam_member/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  machine_image:
    type: string
    description: "Required property for MachineImageIamMember"
  member:
    type: string
    description: "Required property for MachineImageIamMember"
  role:
    type: string
    description: "Required property for MachineImageIamMember"
  id:
    type: string
    description: "Optional property for MachineImageIamMember"
    default: null
  project:
    type: string
    description: "Optional property for MachineImageIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:compute:MachineImageIamMember
    properties:
      machine_image: ${var.machine_image}
      member: ${var.member}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
