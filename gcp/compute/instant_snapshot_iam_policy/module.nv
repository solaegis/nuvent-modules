variables:
  name:
    type: string
    description: "Required property for InstantSnapshotIamPolicy"
  policy_data:
    type: string
    description: "Required property for InstantSnapshotIamPolicy"
  id:
    type: string
    description: "Optional property for InstantSnapshotIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for InstantSnapshotIamPolicy"
    default: null
  zone:
    type: string
    description: "Optional property for InstantSnapshotIamPolicy"
    default: null

resources:
  main:
    type: gcp:compute:InstantSnapshotIamPolicy
    properties:
      name: ${var.name}
      policy_data: ${var.policy_data}
      id: ${var.id}
      project: ${var.project}
      zone: ${var.zone}
