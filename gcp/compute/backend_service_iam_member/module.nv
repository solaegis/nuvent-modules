variables:
  member:
    type: string
    description: "Required property for BackendServiceIamMember"
  name:
    type: string
    description: "Required property for BackendServiceIamMember"
  role:
    type: string
    description: "Required property for BackendServiceIamMember"
  id:
    type: string
    description: "Optional property for BackendServiceIamMember"
    default: null
  project:
    type: string
    description: "Optional property for BackendServiceIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:compute:BackendServiceIamMember
    properties:
      member: ${var.member}
      name: ${var.name}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
