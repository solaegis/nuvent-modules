variables:
  cluster:
    type: string
    description: "Required property for ClusterIamMember"
  member:
    type: string
    description: "Required property for ClusterIamMember"
  role:
    type: string
    description: "Required property for ClusterIamMember"
  id:
    type: string
    description: "Optional property for ClusterIamMember"
    default: null
  project:
    type: string
    description: "Optional property for ClusterIamMember"
    default: null
  region:
    type: string
    description: "Optional property for ClusterIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:dataproc:ClusterIamMember
    properties:
      cluster: ${var.cluster}
      member: ${var.member}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      region: ${var.region}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
  region:
    description: "Output: region"
    value: ${resources.main.region}
