#------------------------------------------------------------------------------
# gcp/dataproc/cluster_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  cluster:
    type: string
    description: "Required property for ClusterIamPolicy"
  policy_data:
    type: string
    description: "Required property for ClusterIamPolicy"
  id:
    type: string
    description: "Optional property for ClusterIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for ClusterIamPolicy"
    default: null
  region:
    type: string
    description: "Optional property for ClusterIamPolicy"
    default: null

resources:
  main:
    type: gcp:dataproc:ClusterIamPolicy
    properties:
      cluster: ${var.cluster}
      policy_data: ${var.policy_data}
      id: ${var.id}
      project: ${var.project}
      region: ${var.region}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
  region:
    description: "Output: region"
    value: ${resources.main.region}
