variables:
  feature_group:
    type: string
    description: "Required property for AiFeatureGroupIamMember"
  member:
    type: string
    description: "Required property for AiFeatureGroupIamMember"
  role:
    type: string
    description: "Required property for AiFeatureGroupIamMember"
  id:
    type: string
    description: "Optional property for AiFeatureGroupIamMember"
    default: null
  project:
    type: string
    description: "Optional property for AiFeatureGroupIamMember"
    default: null
  region:
    type: string
    description: "Optional property for AiFeatureGroupIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:vertex:AiFeatureGroupIamMember
    properties:
      feature_group: ${var.feature_group}
      member: ${var.member}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      region: ${var.region}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
