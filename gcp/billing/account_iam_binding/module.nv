variables:
  billing_account_id:
    type: string
    description: "Required property for AccountIamBinding"
  members:
    type: list
    description: "Required property for AccountIamBinding"
  role:
    type: string
    description: "Required property for AccountIamBinding"
  id:
    type: string
    description: "Optional property for AccountIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:billing:AccountIamBinding
    properties:
      billing_account_id: ${var.billing_account_id}
      members: ${var.members}
      role: ${var.role}
      id: ${var.id}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
