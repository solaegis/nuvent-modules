variables:
  certificate_template:
    type: string
    description: "Required property for CertificateTemplateIamMember"
  member:
    type: string
    description: "Required property for CertificateTemplateIamMember"
  role:
    type: string
    description: "Required property for CertificateTemplateIamMember"
  id:
    type: string
    description: "Optional property for CertificateTemplateIamMember"
    default: null
  location:
    type: string
    description: "Optional property for CertificateTemplateIamMember"
    default: null
  project:
    type: string
    description: "Optional property for CertificateTemplateIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:privateca:CertificateTemplateIamMember
    properties:
      certificate_template: ${var.certificate_template}
      member: ${var.member}
      role: ${var.role}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
