#------------------------------------------------------------------------------
# gcp/privateca/certificate_template_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  certificate_template:
    type: string
    description: "Required property for CertificateTemplateIamPolicy"
  policy_data:
    type: string
    description: "Required property for CertificateTemplateIamPolicy"
  id:
    type: string
    description: "Optional property for CertificateTemplateIamPolicy"
    default: null
  location:
    type: string
    description: "Optional property for CertificateTemplateIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for CertificateTemplateIamPolicy"
    default: null

resources:
  main:
    type: gcp:privateca:CertificateTemplateIamPolicy
    properties:
      certificate_template: ${var.certificate_template}
      policy_data: ${var.policy_data}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  location:
    description: "Output: location"
    value: ${resources.main.location}
  project:
    description: "Output: project"
    value: ${resources.main.project}
