#------------------------------------------------------------------------------
# gcp/spanner/database_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  database:
    type: string
    description: "Required property for DatabaseIamPolicy"
  instance:
    type: string
    description: "Required property for DatabaseIamPolicy"
  policy_data:
    type: string
    description: "Required property for DatabaseIamPolicy"
  id:
    type: string
    description: "Optional property for DatabaseIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for DatabaseIamPolicy"
    default: null

resources:
  main:
    type: gcp:spanner:DatabaseIamPolicy
    properties:
      database: ${var.database}
      instance: ${var.instance}
      policy_data: ${var.policy_data}
      id: ${var.id}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
