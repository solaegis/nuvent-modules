#------------------------------------------------------------------------------
# gcp/bigquery/dataset_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  dataset_id:
    type: string
    description: "Required property for DatasetIamPolicy"
  policy_data:
    type: string
    description: "Required property for DatasetIamPolicy"
  id:
    type: string
    description: "Optional property for DatasetIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for DatasetIamPolicy"
    default: null

resources:
  main:
    type: gcp:bigquery:DatasetIamPolicy
    properties:
      dataset_id: ${var.dataset_id}
      policy_data: ${var.policy_data}
      id: ${var.id}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
