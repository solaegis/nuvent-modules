#------------------------------------------------------------------------------
# gcp/bigquery/dataset_iam_binding/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  dataset_id:
    type: string
    description: "Required property for DatasetIamBinding"
  members:
    type: list
    description: "Required property for DatasetIamBinding"
  role:
    type: string
    description: "Required property for DatasetIamBinding"
  id:
    type: string
    description: "Optional property for DatasetIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for DatasetIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:bigquery:DatasetIamBinding
    properties:
      dataset_id: ${var.dataset_id}
      members: ${var.members}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
