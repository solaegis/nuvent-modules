variables:
  dataset_id:
    type: string
    description: "Required property for DatasetIamMember"
  member:
    type: string
    description: "Required property for DatasetIamMember"
  role:
    type: string
    description: "Required property for DatasetIamMember"
  id:
    type: string
    description: "Optional property for DatasetIamMember"
    default: null
  project:
    type: string
    description: "Optional property for DatasetIamMember"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:bigquery:DatasetIamMember
    properties:
      dataset_id: ${var.dataset_id}
      member: ${var.member}
      role: ${var.role}
      id: ${var.id}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
