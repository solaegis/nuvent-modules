#------------------------------------------------------------------------------
# gcp/cloud/run_service_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  policy_data:
    type: string
    description: "Required property for RunServiceIamPolicy"
  service:
    type: string
    description: "Required property for RunServiceIamPolicy"
  id:
    type: string
    description: "Optional property for RunServiceIamPolicy"
    default: null
  location:
    type: string
    description: "Optional property for RunServiceIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for RunServiceIamPolicy"
    default: null

resources:
  main:
    type: gcp:cloud:RunServiceIamPolicy
    properties:
      policy_data: ${var.policy_data}
      service: ${var.service}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  location:
    description: "Output: location"
    value: ${resources.main.location}
  project:
    description: "Output: project"
    value: ${resources.main.project}
