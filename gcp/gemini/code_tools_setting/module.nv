#------------------------------------------------------------------------------
# gcp/gemini/code_tools_setting/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  code_tools_setting_id:
    type: string
    description: "Id of the Code Tools Setting."
  id:
    type: string
    description: "Optional property for CodeToolsSetting"
    default: null
  labels:
    type: object
    description: "Labels as key value pairs.  **Note**: This field is non-authoritative, and will only manage the labels present in your configuration. Please refer to the field 'effective_labels' for all of the labels present on the resource."
    default: null
  location:
    type: string
    description: "Resource ID segment making up resource 'name'. It identifies the resource within its parent collection as described in https://google.aip.dev/122."
    default: null
  project:
    type: string
    description: "Optional property for CodeToolsSetting"
    default: null
  enabled_tool:
    type: list
    description: "Nested block: enabled_tool"
    default: []
  timeouts:
    type: list
    description: "Nested block: timeouts"
    default: []

resources:
  main:
    type: gcp:gemini:CodeToolsSetting
    properties:
      code_tools_setting_id: ${var.code_tools_setting_id}
      id: ${var.id}
      labels: ${var.labels}
      location: ${var.location}
      project: ${var.project}
      dynamic:
        enabled_tool:
          for_each: ${var.enabled_tool}
          content:
            account_connector: ${each.value.account_connector}
            handle: ${each.value.handle}
            tool: ${each.value.tool}
            uri_override: ${each.value.uri_override}
            config: ${each.value.config}
        timeouts:
          for_each: ${var.timeouts}
          content:
            create: ${each.value.create}
            delete: ${each.value.delete}
            update: ${each.value.update}

outputs:
  create_time:
    description: "Create time stamp."
    value: ${resources.main.create_time}
  effective_labels:
    description: "All of labels (key/value pairs) present on the resource in GCP, including the labels configured through Terraform, other clients and services."
    value: ${resources.main.effective_labels}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  name:
    description: "Identifier. Name of the resource. Format:projects/{project}/locations/{location}/codeToolsSettings/{codeToolsSetting}"
    value: ${resources.main.name}
  project:
    description: "Output: project"
    value: ${resources.main.project}
  terraform_labels:
    description: "The combination of labels configured directly on the resource  and default labels configured on the provider."
    value: ${resources.main.terraform_labels}
  update_time:
    description: "Update time stamp."
    value: ${resources.main.update_time}
