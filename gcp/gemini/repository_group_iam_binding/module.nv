#------------------------------------------------------------------------------
# gcp/gemini/repository_group_iam_binding/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  code_repository_index:
    type: string
    description: "Required property for RepositoryGroupIamBinding"
  members:
    type: list
    description: "Required property for RepositoryGroupIamBinding"
  repository_group_id:
    type: string
    description: "Required property for RepositoryGroupIamBinding"
  role:
    type: string
    description: "Required property for RepositoryGroupIamBinding"
  id:
    type: string
    description: "Optional property for RepositoryGroupIamBinding"
    default: null
  location:
    type: string
    description: "Optional property for RepositoryGroupIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for RepositoryGroupIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:gemini:RepositoryGroupIamBinding
    properties:
      code_repository_index: ${var.code_repository_index}
      members: ${var.members}
      repository_group_id: ${var.repository_group_id}
      role: ${var.role}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  location:
    description: "Output: location"
    value: ${resources.main.location}
  project:
    description: "Output: project"
    value: ${resources.main.project}
