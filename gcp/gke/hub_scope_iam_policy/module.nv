#------------------------------------------------------------------------------
# gcp/gke/hub_scope_iam_policy/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  policy_data:
    type: string
    description: "Required property for HubScopeIamPolicy"
  scope_id:
    type: string
    description: "Required property for HubScopeIamPolicy"
  id:
    type: string
    description: "Optional property for HubScopeIamPolicy"
    default: null
  project:
    type: string
    description: "Optional property for HubScopeIamPolicy"
    default: null

resources:
  main:
    type: gcp:gke:HubScopeIamPolicy
    properties:
      policy_data: ${var.policy_data}
      scope_id: ${var.scope_id}
      id: ${var.id}
      project: ${var.project}

outputs:
  etag:
    description: "Output: etag"
    value: ${resources.main.etag}
  id:
    description: "Output: id"
    value: ${resources.main.id}
  project:
    description: "Output: project"
    value: ${resources.main.project}
