variables:
  members:
    type: list
    description: "Required property for CustomTargetTypeIamBinding"
  name:
    type: string
    description: "Required property for CustomTargetTypeIamBinding"
  role:
    type: string
    description: "Required property for CustomTargetTypeIamBinding"
  id:
    type: string
    description: "Optional property for CustomTargetTypeIamBinding"
    default: null
  location:
    type: string
    description: "Optional property for CustomTargetTypeIamBinding"
    default: null
  project:
    type: string
    description: "Optional property for CustomTargetTypeIamBinding"
    default: null
  condition:
    type: list
    description: "Nested block: condition"
    default: []

resources:
  main:
    type: gcp:clouddeploy:CustomTargetTypeIamBinding
    properties:
      members: ${var.members}
      name: ${var.name}
      role: ${var.role}
      id: ${var.id}
      location: ${var.location}
      project: ${var.project}
      dynamic:
        condition:
          for_each: ${var.condition}
          content:
            description: ${each.value.description}
            expression: ${each.value.expression}
            title: ${each.value.title}
