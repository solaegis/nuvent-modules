#------------------------------------------------------------------------------
# github/organization/role_team_assignment/module.nv
# yaml-language-server: $schema=https://raw.githubusercontent.com/solaegis/nuvent/refs/heads/main/tools/vscode-extension/schemas/nuvent-manifest.schema.json
#------------------------------------------------------------------------------

variables:
  role_id:
    type: string
    description: "The GitHub organization role id"
  team_slug:
    type: string
    description: "The GitHub team slug."
  id:
    type: string
    description: "Optional property for RoleTeamAssignment"
    default: null

resources:
  main:
    type: github:organization:RoleTeamAssignment
    properties:
      role_id: ${var.role_id}
      team_slug: ${var.team_slug}
      id: ${var.id}

outputs:
  id:
    description: "Output: id"
    value: ${resources.main.id}
